@model IMDB.Infrastructure.DTO.MovieDTO

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        @Model.Name
        <small>@Model.ReleaseDate</small>
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">
        @if (Model.Images.Count != 0)
        {
            <div class="col-md-8">
                <img src="~/media/movie/@Url.Content(Model.Images[0].Path)" style="width:750px; height:500px;">
            </div>
        }
        <div class="col-md-4">
            <h3 class="my-3">Description</h3>
            <p>@Model.Descreption</p>
            <h3 class="my-3">Actors</h3>

            @if (Model.Member.Count != 0)
            {
                <ul>
                    @foreach (var item in Model.Member)
                    {
                        <li>@item.FirstName + @item.LastName</li>
                    }
                </ul>
            }

        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">Pictures</h3>

    <div class="row">
        @if (Model.Images.Count != 0)
        {
            @foreach (var item in Model.Images)
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <a href="#">
                        <img src="~/media/movie/@Url.Content(item.Path)" style="width:500px; height:300px;">
                    </a>
                </div>
            }
        }
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->