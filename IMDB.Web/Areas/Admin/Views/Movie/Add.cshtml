@model IMDB.Infrastructure.VM.MovieCategoryVM
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
    <div class="container">
        <form action="" method="post" enctype="multipart/form-data">
            <div id="alert" class="alert alert-success" style="visibility:hidden">
                Film Eklendi
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Movie.Name" class="control-label">Movie Name</label>
                <input asp-for="@Model.Movie.Name" type="text" class="form-control" id="name" />
                <span asp-validation-for="Movie.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Descreption" class="control-label">Movie Descreption</label>
                <textarea asp-for="Movie.Descreption" class="form-control" id="descreption"></textarea>
                <span asp-validation-for="Movie.Descreption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.CategoryId" class="control-label">Kategori Seçiniz</label>
                <select asp-for="Movie.CategoryId" class="control-label">
                    @foreach (var item in Model.Categories)
                    {
                        <option id="categoryId" value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
           <input type="button" class="alert-success" id="ekle" value="Ekle" />
        </form>
      </div>




@section Scripts{
    <script>
      document.querySelector("#ekle").addEventListener('click', ekle);
        function ekle() {
            var name = $("#name").val();
            var categoryId = $("#categoryId").val();
            var descreption = $("#descreption").val();
            $.ajax({
                dataType: 'JSON',
                data: { "name": name, "categoryId": categoryId, "descreption": descreption },
                type: 'POST',
                url: "/Admin/Movie/Add",
                success: function () {
                    $("#alert").css({ "visibility": "visible" });
                }
            });
        };
        
       
    </script>
}



